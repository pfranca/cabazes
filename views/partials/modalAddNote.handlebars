<!-- Modal Add Note -->
<div class="modal fade" id="addNoteModal" tabindex="-1" role="dialog" aria-labelledby="addNoteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addNoteModalLabel">Something went wrong with this title! Please report this bug!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body">
            <form id="addNoteModalForm" name="addNoteModalForm" action="/families/addNote" method="post">
                <div class="form-group">
                    <label for="addNoteTextBox">Nota:</label>
                    <textarea class="form-control" rows="5" id="addNoteTextBox" name="note"></textarea>
                </div>            
                <input type="hidden" class="form-control" id="addNoteModalID" value="" name="famID">
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-success" data-dismiss="modal" id="saveAddNoteButton"> <i class="fas fa-plus"></i> Adicionar Nota</button>
        </div>
    
    </div>
  </div>
</div>

<script>

    $('#saveAddNoteButton').on('click', function (event) {
        $('#addNoteModalForm').submit();
    });

    $('#addNoteModal').on('show.bs.modal', function (event) {
        let button = $(event.relatedTarget)
        let name = button.data('nome')
        let id = button.data('id')
        let modal = $(this)

        modal.find('.modal-title').text('Adicionar Nota à Família ' + name)
        modal.find('input#addNoteModalID').val(id);
        modal.find('.modal-body textarea').val('') //Limpa os dados que já existem.
        
        
    })

</script>
